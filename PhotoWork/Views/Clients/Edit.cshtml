@model PhotoWork.Models.Client

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}



@using (Html.BeginForm("SaveEdit", "Clients",  FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 style="margin-top:10px;text-align:center">Chỉnh sửa thông tin cá nhân</h4>
    <hr />
    <div style="margin-left:40%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Username)
        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AuthenticatedUser.FullName, htmlAttributes: new { @class = "control-label col-md-9" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AuthenticatedUser.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthenticatedUser.FullName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AuthenticatedUser.phoneNumber, htmlAttributes: new { @class = "control-label col-md-9" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AuthenticatedUser.phoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthenticatedUser.phoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LinkSocialmedia, htmlAttributes: new { @class = "control-label col-md-9" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.LinkSocialmedia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkSocialmedia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <button type="submit" class="btn btn-success" >Lưu</button>
            </div>
        </div>
    </div>

</div>
}

