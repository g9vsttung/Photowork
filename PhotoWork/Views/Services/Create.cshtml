@model PhotoWork.Models.Service

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Service</h4>
        <hr />
        @using (Html.BeginForm("CreateSer", "Services", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
        {



            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-4">ID:</div>
                <div class="col-md-12">
                    <input class="form-control" type="text" name="txtId" required />
                    <span id="email_ERR" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-4">Service name:</div>
                <div class="col-md-12">
                    <input class="form-control" type="text" name="txtName" required />
                    <span id="email_ERR" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-4">Description:</div>
                <div class="col-md-12">
                    <input class="form-control" type="text" name="txtDes" required />
                    <span id="email_ERR" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Tạo</button>










        }
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
