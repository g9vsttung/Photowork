@model PhotoWork.Models.Service

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@if (Request.QueryString["status"] != null)
{
    if (Request.QueryString["status"].Equals("SUCCESS"))
    {
        <h3 style="color: red">Edit successful</h3>
    }

}
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Service</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txtName" value="@Model.ServiceName" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txtDes" value="@Model.Description" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isAvaiable, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="cbIsAvaiable">
                    @if (Model.isAvaiable == true)
                    {
                        <option selected="selected">true</option>
                        <option>false</option>
                    }
                    else
                    {
                        <option>true</option>
                        <option selected="selected">false</option>
                    }

                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <input type="hidden" name="txtID" value="@TempData["photoId"]" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index","Photographers")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
