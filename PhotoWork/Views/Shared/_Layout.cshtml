@model PhotoWork.Models.AuthenticatedUser
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to PhotoWork</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/img/Logo_WhiteBackGroud.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/owl")  <!--Owl Carousel-->
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="fixed-top navbar-custom navbar-fixed-top top">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index"><img src="~/Content/img/Logo_WhiteBackGroud.png" width="20px" height="20px" /> PhotoWork</a>
                <div class="navbar-brand" id="navbarResponsive" style="float:right">
                    @Html.ActionLink("Đăng kí", "Create", "AuthenticatedUsers")
                    <a data-toggle="modal" href="#exampleModal" class="regis">
                        ĐĂNG NHẬP
                    </a>
                </div>
            </div>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="dropdown">
                            <button type="button" class="btn btn-light" data-toggle="dropdown">
                                Chụp Ảnh
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Ngoại cảnh</a>
                                <a class="dropdown-item" href="#">Studio</a>
                                <a class="dropdown-item" href="#">Sự kiện/ hội nghị</a>
                                <a class="dropdown-item" href="#">Nhóm</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="dropdown">
                            <button type="button" class="btn btn-light" data-toggle="dropdown">
                                Quay Phim
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Studio</a>
                                <a class="dropdown-item" href="#">Ngoại cảnh</a>
                                <a class="dropdown-item" href="#">Sự kiện/ hội nghị</a>
                                <a class="dropdown-item" href="#">Theo ngày</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="dropdown">
                            <button type="button" class="btn btn-light" data-toggle="dropdown">
                                Chỉnh Sửa
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Ảnh</a>
                                <a class="dropdown-item" href="#">Video/Clip</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        @Html.Hidden("pageInitCounter", Session["Account_ERR"])
        <!-- LOGIN MODAL -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Đăng nhập</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
                    {
                        <div class="modal-body">
                            <div class="container">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <h2> @ViewBag.AccountERR</h2>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.passwords, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-12">
                                        @Html.PasswordFor(model => model.passwords,  new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span id="ERR" style="color:red;font-style:italic;margin-left:25px;"></span>
                                </div>
                                
                         
                                <span class="psw">

                                    <a href="" style="text-decoration: none " id="loginform-left">Bạn đã quên mật khẩu?</a>
                                    <a href="/Home/Register" style="text-decoration: none " id="loginform-right">Tạo tài khoản mới.</a>
                                </span>
                            </div><br />

                            <div class="container">
                                <div class="or-label">
                                    <hr /><b>HOẶC</b>
                                </div>
                                <button class="btn btn-danger" type="button" style="margin-left: 24%;">ĐĂNG NHẬP VỚI GOOGLE</button><br><br>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>
   
        @RenderBody()
   
    <!-- Footer -->
    <footer>
        <div>
            <h3>Copyright &copy; 2021 PhotoWork.com</h3>
            <h5>Liên hệ: 0123-456-789</h5>
            <h5>Email:demoweb@gmail.com</h5>
        </div>
    </footer>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            var msg = $("#pageInitCounter").val();
            if (msg.length != 0) {
                $("#exampleModal").modal();
                $("#ERR").html('*'+msg);
            }
        });
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 5
                }
            }
        })
    </script>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>
