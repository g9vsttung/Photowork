        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <!-- Footer -->
    <footer>
        <div>
            <h3>Copyright &copy; 2021 PhotoWork.com</h3>
            <h5>Liên hệ: 0123-456-789</h5>
            <h5>Email:demoweb@gmail.com</h5>
        </div>
    </footer>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            var msg = $("#pageInitCounter").val();
            if (msg.length != 0) {
                $("#exampleModal").modal();
                $("#ERR").html('*' + msg);
            }
            var msg1 = $("#pageInitCounter1").val();
            if (msg1.length != 0) {
                $("#exampleModal1").modal();
            }
        });
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 5
                }
            }
        })
    </script>
</body>
